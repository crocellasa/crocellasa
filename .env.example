# ==============================================
# ALCOVA SMART CHECK-IN - Environment Variables
# ==============================================
# Copy this file to backend/.env and frontend/.env.local
# and fill in your actual credentials

# ==============================================
# BACKEND (.env)
# ==============================================

# Application
APP_ENV=development
APP_NAME=Alcova Smart Check-in
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
SECRET_KEY=your-secret-key-change-this-to-random-32-chars-minimum
DEBUG=true

# Supabase
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Tuya Smart Locks
TUYA_CLIENT_ID=your_tuya_client_id
TUYA_SECRET=your_tuya_secret
TUYA_REGION=eu
TUYA_DEVICE_MAIN_ENTRANCE=bfxxxxxxxxxxxxx
TUYA_DEVICE_FLOOR_DOOR=bfxxxxxxxxxxxxx
TUYA_DEVICE_APARTMENT=bfxxxxxxxxxxxxx

# Twilio (WhatsApp/SMS)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_SMS_FROM=+1234567890

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_ADMIN_CHAT_ID=123456789

# Home Assistant (Ring Intercom)
HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9...
RING_BUTTON_ENTITY_ID=button.ring_intercom_unlock

# Email (Fallback - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Alcova Landolina <noreply@alcova.com>

# JWT
JWT_SECRET=another-random-secret-change-this-32-chars-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=720

# n8n (optional)
N8N_WEBHOOK_SECRET=random-secret-for-n8n-webhook

# Scheduler
SCHEDULER_TIMEZONE=Europe/Rome
AUTO_REVOKE_HOUR=14

# Property
DEFAULT_PROPERTY_ID=alcova_landolina_fi
CODE_LENGTH=6
CODE_BUFFER_HOURS_BEFORE=2
CODE_BUFFER_HOURS_AFTER=2

# ==============================================
# FRONTEND (.env.local)
# ==============================================

NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# JWT Secret (must match backend)
JWT_SECRET=same-as-backend-jwt-secret
